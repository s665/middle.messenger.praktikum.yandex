{{!< main}}
<main>
    <div class="block-center">
        <div class="paper">
            <h1>Авторизация</h1>
            <div class="form-group">
                {{#with login.inputs}}
                    {{#each this}}
                        {{> input}}
                    {{/each}}
                {{/with}}
                <div class="form-group__item">
                    <a href="index.hbs">
                        <button class="button primary mt-4">Войти</button>
                    </a>
                </div>
                <div class="form-group__item">
                    <a href="registration.hbs">
                        <button class="button">Зарегистрироваться</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

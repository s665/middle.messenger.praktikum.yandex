        <div class="chat-details__wrap">
            <span>{{username}}</span>
            <span class="chat-details__lastMessage">{{text}}</span>
        </div>
    </div>
    <div class="chat-details__wrap-between">
        <span class="chat-details__time">{{time}}</span>
    </div>
</div>